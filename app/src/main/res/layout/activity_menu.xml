<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carros"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/setting"
        app:layout_constraintEnd_toEndOf="@+id/setting"
        app:layout_constraintHorizontal_bias="0.396"
        app:layout_constraintStart_toEndOf="@+id/ellipse_170"
        app:layout_constraintTop_toTopOf="@+id/setting"
        app:layout_constraintVertical_bias="0.769" />

    <View
        android:id="@+id/ellipse_"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/oval_background"
        app:layout_constraintStart_toStartOf="@+id/setting"
        app:layout_constraintTop_toTopOf="@+id/setting" />

    <RelativeLayout
        android:id="@+id/bars"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3lg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:onClick="retroceder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/arrow" />

        <TextView
            android:id="@+id/sign_up"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="-2sp"
            android:text="GearUp"
            android:textAppearance="@style/sign_up"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3lg"
            app:layout_constraintEnd_toStartOf="@+id/imageView6" />

    </RelativeLayout>

    <!-- Item 1 -->

    <View
        android:id="@+id/setting"
        android:layout_width="327dp"
        android:layout_height="40dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bars" />

    <View
        android:id="@+id/ellipse_170"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/oval_background"
        app:layout_constraintStart_toStartOf="@+id/setting"
        app:layout_constraintTop_toTopOf="@+id/setting" />


    <!-- Item 2: Dashboard -->

    <View
        android:id="@+id/setting2"
        android:layout_width="327dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="abrirGestao"
        android:text="Gestão"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/setting2"
        app:layout_constraintEnd_toEndOf="@+id/setting2"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toEndOf="@+id/ellipse_2"
        app:layout_constraintTop_toTopOf="@+id/setting2"
        app:layout_constraintVertical_bias="0.538" />

    <View
        android:id="@+id/ellipse_2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/oval_background"
        app:layout_constraintStart_toStartOf="@+id/setting2"
        app:layout_constraintTop_toTopOf="@+id/setting2" />

    <!-- Item 3: Viaturas -->

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/ellipse_2"
        app:layout_constraintEnd_toEndOf="@+id/ellipse_2"
        app:layout_constraintStart_toStartOf="@+id/setting2"
        app:layout_constraintTop_toTopOf="@+id/ellipse_2"
        app:srcCompat="@drawable/fi_rr_settings" />

    <View
        android:id="@+id/setting3"
        android:layout_width="327dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sobre Nós"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/setting3"
        app:layout_constraintEnd_toEndOf="@+id/setting3"
        app:layout_constraintHorizontal_bias="0.383"
        app:layout_constraintStart_toEndOf="@+id/ellipse_3"
        app:layout_constraintTop_toTopOf="@+id/setting3"
        app:layout_constraintVertical_bias="0.538" />

    <View
        android:id="@+id/ellipse_3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/oval_background"
        app:layout_constraintStart_toStartOf="@+id/setting3"
        app:layout_constraintTop_toTopOf="@+id/setting3" />

    <!-- Item 4: Sair -->

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/ellipse_3"
        app:layout_constraintEnd_toEndOf="@+id/ellipse_3"
        app:layout_constraintStart_toStartOf="@+id/setting3"
        app:layout_constraintTop_toTopOf="@+id/ellipse_3"
        app:srcCompat="@drawable/fi_rr_settings" />

    <View
        android:id="@+id/setting4"
        android:layout_width="327dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting3" />


    <ImageView
        android:id="@+id/irCarros"
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="16dp"
        android:onClick="abrirListaCarros"
        app:layout_constraintEnd_toEndOf="@+id/setting"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/setting"
        app:srcCompat="@drawable/icons8_forward_50" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="212dp"
        android:text="Sair"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/setting4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/setting4" />

    <ImageView
        android:id="@+id/ellipse_4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/oval_background"
        app:layout_constraintStart_toStartOf="@+id/setting4"
        app:layout_constraintTop_toTopOf="@+id/setting4" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/ellipse_4"
        app:layout_constraintEnd_toEndOf="@+id/ellipse_4"
        app:layout_constraintStart_toStartOf="@+id/setting4"
        app:layout_constraintTop_toTopOf="@+id/ellipse_4"
        app:srcCompat="@drawable/fi_rr_settings" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/ellipse_"
        app:layout_constraintEnd_toEndOf="@+id/ellipse_"
        app:layout_constraintStart_toStartOf="@+id/ellipse_"
        app:layout_constraintTop_toTopOf="@+id/ellipse_"
        app:srcCompat="@drawable/fi_rr_settings" />

    <ImageView
        android:id="@+id/irDashboard"
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="16dp"
        android:onClick="abrirGestao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/setting2"
        app:srcCompat="@drawable/icons8_forward_50" />

    <ImageView
        android:id="@+id/irViaturas"
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="16dp"
        android:onClick="abrirSobreNos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/setting3"
        app:srcCompat="@drawable/icons8_forward_50" />

    <ImageView
        android:id="@+id/Sair"
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="12dp"
        android:onClick="logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/setting4"
        app:srcCompat="@drawable/icons8_forward_50" />

</androidx.constraintlayout.widget.ConstraintLayout>
